# 开发环境配置
NODE_ENV=development

# API配置
VITE_API_BASE_URL=http://localhost:3000
VITE_ADMIN_URL=http://localhost:5174
VITE_API_TIMEOUT=10000
VITE_DEBUG=true

# 认证配置
VITE_JWT_SECRET=dev_jwt_secret_key
VITE_TOKEN_EXPIRES_IN=7d

# 微信配置（开发环境）
VITE_WECHAT_APP_ID=wx_dev_app_id
VITE_WECHAT_APP_SECRET=dev_wechat_app_secret
VITE_WECHAT_MCH_ID=dev_merchant_id
VITE_WECHAT_API_V3_KEY=dev_api_v3_key

# 安全配置
VITE_ENABLE_MOCK_DATA=false
VITE_DEBUG_MODE=true

# 文件上传配置
VITE_UPLOAD_URL=http://localhost:3000/api/v1/upload
VITE_MAX_FILE_SIZE=10485760

# 分页配置
VITE_DEFAULT_PAGE_SIZE=20
VITE_MAX_PAGE_SIZE=100

# 主题配置
VITE_PRIMARY_COLOR=#1890ff
VITE_LAYOUT_MODE=side

# 开发工具配置
VITE_ENABLE_DEVTOOLS=true
VITE_ENABLE_MOCK=false